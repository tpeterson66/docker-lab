<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
    crossorigin="anonymous">

  <title>Address Book</title>
</head>

<body>
  <!-- Jumbotron -->
  <div class="jumbotron">
    <h1 class="display-4"> Address Book </h1>
    <p class="lead">This is a standalone NodeJS app that is used for demos only. The information provided is FAKE and not for actual use!</p>
    <a class="btn btn-primary btn-lg" href="https://github.com/tpeterson66/portable" role="button">Github</a>
  </div>
  <!-- end of jumbotron -->

  <!-- table -->
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Handle</th>
      </tr>
    </thead>

    <!-- EJS loop through sample data to build address book! -->
    <tbody>
      <%  for (var i = 0; i < sample.length; i++) {%>
        <tr>
          <th scope="row"><%= i + 1 %></th>
          <td><%= sample[i].name %></td>
          <td><%= sample[i].email %></td>
          <td><%= sample[i].phone %></td>
        </tr>
        <% } %>
    </tbody>
  </table>

  <footer class="footer mt-auto py-3">
      <div class="container">
        <span class="text-muted text-center">This is running in <%= env %></span>
      </div>
    </footer>

  <!-- end of table  -->

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
</body>

</html>
